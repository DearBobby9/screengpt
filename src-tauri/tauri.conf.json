{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScreenGPT",
  "version": "0.1.0",
  "identifier": "com.screengpt.app",
  "build": {
    "beforeDevCommand": "npm run --prefix nextchat export:dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run --prefix nextchat export",
    "frontendDist": "../nextchat/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ScreenGPT",
        "width": 960,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "visible": true,
        "decorations": true,
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
